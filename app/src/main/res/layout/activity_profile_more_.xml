    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/shopper"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Shopper"
                android:textColor="@color/general_black"
                android:textSize="14dp" />

            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/shopper_rate"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="71dp"
                android:layout_marginBottom="6dp"
                app:srb_isIndicator="true"
                app:srb_numberOfStars="5"
                app:srb_rating="3"
                app:srb_starSize="15dp"
                app:srb_stepSize="0.5" />
            <TextView
                android:id="@+id/pre_shopper_cnt"
                android:layout_toRightOf="@+id/shopper_rate"
                android:text="(10)"
                android:textColor="@color/general_black"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/shopper_cnt"
                android:text="0"
                android:textColor="@color/general_black"
                android:layout_marginTop="6dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/traveler"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Traveler"
                android:textColor="@color/general_black"
                android:textSize="14dp" />

            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/trip_rate"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="71dp"
                android:layout_marginBottom="6dp"
                app:srb_isIndicator="true"
                app:srb_numberOfStars="5"
                app:srb_rating="1"
                app:srb_starSize="15dp"
                app:srb_stepSize="0.5" />

            <TextView
                android:id="@+id/pre_trip_cnt"
                android:layout_toRightOf="@+id/trip_rate"
                android:textColor="@color/general_black"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/trip_cnt"
                android:textColor="@color/general_black"
                android:layout_marginTop="6dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/gray_back"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
