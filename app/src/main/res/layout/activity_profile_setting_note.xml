<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ProfileSettingNoteActivity">
    <RelativeLayout
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Notification settings"
            android:textSize="16dp"
            android:textColor="@color/general_black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@color/gray_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="STATUS UPDATES ON ORDERS"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
            </RelativeLayout>

            <TextView
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="22dp"
                android:hint="Different types of notifications regarding your activity on XXX"
                android:gravity="center_vertical"
                android:textColor="@color/general_black"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />
            <TextView
                android:background="@color/gray_back"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="22dp"
                    android:text="Email"
                    android:gravity="center_vertical"
                    android:textColor="@color/general_black"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" />
                <Switch
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="22dp"
                    android:text="SMS"
                    android:gravity="center_vertical"
                    android:textColor="@color/general_black"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" />
                <Switch
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:background="@color/gray_back"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:background="@color/gray_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="SALES AND PROMOTIONS"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
            </RelativeLayout>

            <TextView
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="22dp"
                android:hint="Recieve coupons, promotions,surveys, product updates, and inspiration from XXX and partners"
                android:gravity="center_vertical"
                android:textColor="@color/general_black"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/gray_back"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="22dp"
                    android:text="Email"
                    android:gravity="center_vertical"
                    android:textColor="@color/general_black"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" />
                <Switch
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:background="@color/gray_back"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:background="@color/gray_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="NEW ORDER NOTIFICATION"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
            </RelativeLayout>

            <TextView
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="22dp"
                android:hint="Push and email notifications about new orders along your routes."
                android:gravity="center_vertical"
                android:textColor="@color/general_black"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/gray_back"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:background="@color/gray_back"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <ListView
                android:id="@+id/lv_note_setting"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:divider="@color/gray_back"
                android:dividerHeight="1dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>