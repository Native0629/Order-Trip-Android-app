<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">
    <RelativeLayout
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Product Details"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/general_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <ImageView
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <LinearLayout
            android:id="@+id/ll_product_image"
            android:layout_marginRight="20dp"
            android:background="@drawable/back_image"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/picture"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_camera"
            android:background="@drawable/back_image"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ib_camera"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_camera"
                android:padding="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<TextView-->
            <!--android:text="Categories"-->
            <!--android:textSize="13dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <!--<EditText-->
            <!--android:textColor="@color/general_black"-->
            <!--android:text="electronics, clothes, medicine, toysâ€¦ "-->
            <!--android:layout_width="match_parent"-->
            <!--android:textSize="14dp"-->
            <!--android:layout_height="wrap_content" />-->
        <!--<EditText-->
            <!--android:textColor="@color/general_black"-->
            <!--android:hint="Weight :"-->
            <!--android:textSize="14dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/product_name"
                android:textColor="#000"
                android:textSize="14dp"
                android:hint="Produc name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/detaile"
                android:textColor="#000"
                android:textSize="14dp"
                android:hint="Product details: size, color, model, etc."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/price"
                android:hint="Price (US$)"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:layout_marginTop="15dp"
                android:hint="Quantity :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_toLeftOf="@+id/count"
                android:id="@+id/button1"
                android:onClick="countIn"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:text="+" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/button2"
                android:id="@+id/count"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="1" />

            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/button2"
                android:onClick="countDe"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:text="-" />

        </RelativeLayout>

        <ImageView
            android:layout_marginLeft="5dp"
            android:src="@color/general_black"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:gravity="center|bottom"
        android:layout_weight="1"
        android:orientation="vertical" >
        <Button
            android:textAllCaps="false"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_next"
            android:background="@drawable/alert_btn_red"
            android:text="Next"
            android:textColor="@color/general_white"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>
</LinearLayout>