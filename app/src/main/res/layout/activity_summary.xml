<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/general_white"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">
    <RelativeLayout
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back_arrow"
            android:gravity="center" />
        <TextView
            android:text="Summary"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/general_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <ImageView
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="20dp"
            android:background="@drawable/back_image"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/picture"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/product_name"
                android:text="Andriod Phone"
                android:textColor="@color/general_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14dp"
                    android:text="Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/category"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/general_black"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14dp"
                    android:text="Weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/weight"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/general_black"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/gray_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:paddingVertical="5dp"
            android:hint="Deliver From"
            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text1"
            android:text="Moscow"
            android:textColor="@color/general_black"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textAlignment="viewEnd"
            android:textSize="14dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginHorizontal="10dp"
        android:background="@color/gray_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="To"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/to"
            android:layout_toRightOf="@+id/text2"
            android:textColor="@color/general_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beijing"
            android:layout_marginHorizontal="10dp"
            android:textSize="14dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginHorizontal="10dp"
        android:background="@color/gray_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text3"
            android:paddingVertical="5dp"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:text="By"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/edit_date"
            android:paddingVertical="5dp"
            android:layout_toRightOf="@+id/text3"
            android:textColor="@color/general_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Februay 13,2019"
            android:layout_marginHorizontal="10dp"
            android:textSize="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingVertical="5dp"
            android:textSize="14dp"
            android:layout_marginHorizontal="10dp"
            android:text="Price for 1 Projuct"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="US$ 48.00"
            android:textAlignment="textEnd"
            android:textColor="@color/general_black"
            android:textSize="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Taxes and Fees"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="US$ 14.00"
            android:textAlignment="textEnd"
            android:textColor="@color/general_black"
            android:textSize="14dp" />
    </RelativeLayout>

    <ImageView
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Estimated Total"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="US$ 64.00"
            android:textAlignment="textEnd"
            android:textColor="@color/general_black"
            android:textSize="14dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_publish"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:background="@drawable/alert_btn_red"
            android:text="Publish My Order"
            android:textColor="@color/general_white" />
    </LinearLayout>

</LinearLayout>