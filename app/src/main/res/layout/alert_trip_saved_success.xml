<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:drawable/screen_background_dark_transparent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingBottom="10dp"
        android:background="@drawable/back_txt_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:src="@drawable/trip_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:text="Your trip has been saved!"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:textColor="@color/general_black"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="Shoppers can now view your travel plans and if subscribed you will get notified of new order requests from your destination until arrival"
            android:layout_width="match_parent"
            android:textSize="12dp"
            android:textColor="@color/general_black"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/gray_back"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/end_date"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="February 2,2019"
                android:layout_width="match_parent"
                android:textSize="12dp"
                android:textColor="@color/login_btn"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@color/gray_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/from"
                    android:gravity="center"
                    android:text="Moscow"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:textColor="@color/login_btn"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_air_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/to"
                    android:background="@color/gray_back"
                    android:gravity="center"
                    android:text="Beijing"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:textColor="@color/login_btn"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:id="@+id/btn_save"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/alert_btn_red"
                android:text="OK"
                android:textSize="14dp"
                android:textColor="@color/general_white"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
