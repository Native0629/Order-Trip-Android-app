<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_message"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:src="@drawable/person"
            app:civ_border_color="@color/general_white"
            app:civ_border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_off"
            app:civ_border_color="#bfbfbf"
            android:visibility="gone"
            android:src="#bfbfbf"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="35dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:civ_border_width="10dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_on"
            app:civ_border_color="#05df29"
            android:visibility="gone"
            android:src="@drawable/person"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="35dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:civ_border_width="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="0.65"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/username"
                android:textSize="10dp"
                android:textColor="@color/general_black"
                android:layout_marginVertical="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/send_person"
                android:hint="Jan 28,2019"
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_gray"
                android:textSize="10dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/product_name"
            android:text="Android phone"
            android:textColor="@color/general_black"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/last_msg"
            android:maxLines="1"
            android:layout_marginVertical="3dp"
            android:textColor="@color/text_gray"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.05"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center|right">

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/array_icon" />
    </LinearLayout>
</LinearLayout>
