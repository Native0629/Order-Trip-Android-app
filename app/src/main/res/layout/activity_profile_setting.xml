<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ProfileSettingActivity">
    <RelativeLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Setting"
            android:textColor="@color/general_black"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <ImageView
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:background="@color/gray_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="ACCOUNT SETTING"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_setting_email"
        android:layout_marginVertical="7dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:text="Email"
            android:textSize="14dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/general_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/email"
            android:layout_toLeftOf="@+id/ic_next"
            android:layout_marginRight="10dp"
            android:textColor="@color/general_black"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/ic_next"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/array_icon" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_setting_phone"
        android:layout_marginVertical="7dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:layout_marginTop="3dp"
            android:text="Phone number"
            android:textColor="@color/general_black"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/phone_number"
            android:layout_toLeftOf="@+id/ic_next1"
            android:layout_marginRight="10dp"
            android:textColor="@color/general_black"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/ic_next1"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/array_icon" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_setting_payout"
        android:layout_marginVertical="7dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:layout_marginTop="3dp"
            android:text="payout method"
            android:textColor="@color/general_black"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <TextView
            android:layout_toLeftOf="@+id/ic_next2"
            android:layout_marginRight="10dp"
            android:text="paypal"
            android:textColor="@color/general_black"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/ic_next2"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/array_icon" />
    </RelativeLayout>
