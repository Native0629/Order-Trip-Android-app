<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/back_txt"
    android:layout_width="match_parent"
    android:paddingVertical="5dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/date"
        android:textColor="@color/general_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="January 31, 2019"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="14dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/from"
            android:textColor="@color/general_black"
            android:layout_width="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:text="Philadelphia,PA"
            android:layout_marginLeft="10dp"
            android:textSize="14dp" />
        <ImageView
            android:layout_marginLeft="3dp"
            android:src="@drawable/ic_right_arrow"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/to"
        android:textColor="@color/general_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shenyang"
        android:textSize="14dp" />
    <TextView
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_back"/>
    <Button
        android:id="@+id/btn_request"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@drawable/alert_btn_red"
        android:text="Request delivery"
        android:textColor="#fff" />
</LinearLayout>
